@model List<HappyRE.Core.MapModels.Search.ProjectItem>
@using HappyRE.Core.Resources

<div id="project-list" class="clearfix property-list" ng-non-bindable>
    <div class="property-items-header clearfix">
        <h2 class="property-items-title">Dự án nổi bật</h2>
        <div class="property-items-viewmore">
			<a href="@HappyRE.Core.Resources.Message.Routing_Finding_Project" class="mg-link" gtm-event="link" gtm-cat="home" gtm-act="project-latest-more">@Message.Msg_LinkMore<i class="fa fa-angle-right"></i></a>
        </div>
    </div>
    <div class="property-items clearfix">
        @foreach (var item in Model)
        {
            var cover = HappyRE.Core.Utils.Common.NoImageUrl;
            List<string> covers = item.GetCoverImages(true);

            if (item.HasCoverImage())
            {
                cover = covers[0];
            }
            <div class="property">
                <div class="property-image"><img class="lozad" data-src="@cover" alt=""></div>
                <div class="property-info">
                    <a href="@string.Format(HappyRE.Core.Resources.Message.Routing_Project_Detail,item.CodeUrl)" class="link-overlay" gtm-event="link" gtm-cat="home" gtm-act="project-latest">
                        <h3 class="property-title">@item.Title</h3>
                    </a>
                    <div class="property-address">@item.DistrictFullName</div>
                    <div class="property-price">@Html.Raw(item.GetDisplayPrice())</div>
                </div>
            </div>
        }
    </div>
</div>
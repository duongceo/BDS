<link async rel="stylesheet" href="~/scripts/libs/pannellum/pannellum.css">
<style>
    @@media (min-width: 768px) {
        .body-content
        {
            min-height:500px;
            padding-top:30px;
        }
    }
    .body-content{margin-bottom:30px}

    .pnlm-lmsg {
        display: none !important;
    }

    #img-gallery {
        margin: 5px auto;
        position: relative;
        width: 100%;
        max-width: 640px;
        /*max-height: 320px;
        height: 70vh;*/
    }

    #btn-full-screen {
        position: absolute;
        right: 5px;
        top: 0px;
    }

    .owl-carousel {
        width: 100%;
        height: 70vh;
        max-width: 640px;
        max-height: 320px;
        display: block;
        margin: auto;
        overflow: hidden;
    }

    .media-item {
        position: relative;
        width: 100%;
        /*max-width: 640px;
        max-height: 320px;
        height: 70vh;*/
        height: 320px;
    }

        .media-item .media-item-bg {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

    .media-thumb {
        width: 100%;
        max-width: 640px;
        max-height: 60px;
        display: block;
        margin: 10px auto;
    }

        .media-thumb .dot-item {
            width: calc(20% - 10px);
            max-width: 120px;
            max-height: 60px;
            float: left;
            margin-right: 10px;
        }

            .media-thumb .dot-item:last-child {
                margin-right: 0px;
            }

        .media-thumb .active {
            border: solid 2px #00deb6;
        }

    .dot-item img {
        width: 100%;
        height: 100%;
    }

    body.full-screen {
        display: block;
        width: 100% !important;
        height: 100% !important;
        overflow: hidden;
    }

    .full-screen .body-content {
        min-height: 0;
    }

    .full-screen .mogi-footer {
        display: none;
    }

    .full-screen #img-gallery {
        width: 100%;
        height: 100%;
        max-width: initial;
        max-height: initial;
        display: block;
        position: fixed;
        background: white;
        padding: 0;
        margin: 0;
        top: 0;
        left: 0;
        z-index: 100000;
    }

    .full-screen .owl-carousel, .full-screen .media-item {
        display: block;
        max-width: 100%;
        max-height: 100%;
        height: 100%;
    }

    .full-screen .owl-stage-outer, .full-screen .owl-stage, .full-screen .owl-item {
        height: 100%;
    }
</style>


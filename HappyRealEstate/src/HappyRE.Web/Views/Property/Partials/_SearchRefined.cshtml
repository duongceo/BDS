@model List<HappyRE.Core.MapModels.LinkItem>
@using HappyRE.Core.MapModels
@{
    string title = (string)ViewData["title"];
    string gtmAct = (string)ViewData["gtmAct"];
    string gtmCat = (string)ViewData["gtmCat"];
    if (Model == null)
    {
        return;
    }
}
<div class="widget similar" ng-non-bindable>
    <h3>@Html.Raw(title)</h3>
    <ul>
        @foreach (LinkItem item in Model)
        {
            <li><a class="circle" href="@item.Url" gtm-event="link" gtm-cat="@gtmCat" gtm-act="@gtmAct" title="@item.Title">@item.Name <span class="counter">(@item.Total.ToString("N0"))</span></a></li>
        }
    </ul>
</div>